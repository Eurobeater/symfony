{% extends 'base.html.twig' %}

{% block title %}Articulos{% endblock %}

{% block body %}
    <h1>Articulos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Articulo</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.article }}</td>
                <td>{{ article.precio }}</td>
                <td>{{ article.stock }}</td>
                <td>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se han encontrado datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Nuevo</a>
{% endblock %}
